generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  username    String        @unique
  password    String
  workflows   Workflow[]
  credentials Credentials[]
}

model Workflow {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  enabled     Boolean
  userId      String  @db.ObjectId
  nodes       Json
  connections Json

  user    User      @relation(fields: [userId], references: [id])
  webhook Webhook?
}

model Webhook {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  path       String @unique
  method     HTTP_METHOD
  nodeId     String
  active Boolean @default(true)

  workflowId String @db.ObjectId @unique
  workflow Workflow @relation(fields: [workflowId], references: [id])
}

model Credentials {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  platform PLATFORM
  data     Json
  userId   String   @db.ObjectId
  user     User     @relation(fields: [userId], references: [id])
}

model AvailableCredentialsApplications {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  platform PLATFORM
}

enum PLATFORM {
  TELEGRAM
  RESEND
}

enum HTTP_METHOD {
  GET
  POST
}